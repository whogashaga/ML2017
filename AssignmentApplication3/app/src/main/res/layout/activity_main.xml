<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8358413" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6703146" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50615597" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34062928" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1764706" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />


    <Button
        android:id="@+id/calculator_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_0"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="0"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />


    <Button
        android:id="@+id/calculator_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_1"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="1"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        />

    <Button
        android:id="@+id/calculator_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_2"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="2"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        />

    <Button
        android:id="@+id/calculator_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_3"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="3"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        />

    <Button
        android:id="@+id/calculator_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_4"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="4"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        />

    <Button
        android:id="@+id/calculator_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_5"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="5"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        />

    <Button
        android:id="@+id/calculator_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_6"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="6"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        />


    <Button
        android:id="@+id/calculator_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_7"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="7"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:srcCompat="@drawable/calculator_7" />


    <Button
        android:id="@+id/calculator_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_8"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="8"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline7"
        />

    <Button
        android:id="@+id/calculator_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_9"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="9"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        />

    <Button
        android:id="@+id/calculator_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_point"
        android:onClick="onClickNumber"
        android:scaleType="fitCenter"
        android:text="."
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        />

    <Button
        android:id="@+id/calculator_equals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_equals"
        android:onClick="onClickEqual"
        android:scaleType="fitCenter"
        android:text="="
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        />

    <Button
        android:id="@+id/calculator_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_plus"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        android:text="+"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        />

    <Button
        android:id="@+id/calculator_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_minus"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        android:text="-"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        />

    <Button
        android:id="@+id/calculator_times"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_times"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        android:text="x"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        />

    <Button
        android:id="@+id/calculator_divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_divide"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        android:text="÷"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        />

    <Button
        android:id="@+id/calculator_reset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_reset"
        android:onClick="onClickReset"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        />

    <Button
        android:id="@+id/calculator_changesign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_changesign"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />

    <Button
        android:id="@+id/calculator_percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_percent"
        android:onClick="onClickOperator"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />



    <ImageView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/calculator_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/finalValue"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="top|end"
        android:textColor="@android:color/white"
        android:textSize="54sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_changesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11" />

    <TextView
        android:id="@+id/calculation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom|end"
        android:textColor="@android:color/background_light"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBar" />




</android.support.constraint.ConstraintLayout>